[user]
        name = bradrf
        email = brad@gigglewax.com
[core]
        excludesfile = /Users/brad/.gitignore_global
        autocrlf = input
[color]
        ui = true
# [diff]
#         tool = ediff
#         guitool = ediff
# [difftool "ediff"]
#         cmd = ediff $LOCAL $REMOTE $MERGED
[merge]
        tool = ediff
[mergetool "ediff"]
        cmd = ediff $LOCAL $REMOTE $MERGED $BASE
        trustExitCode = true
[alias]
        which = !git_which
        co = !git_safe_checkout
        st = status
        br = branch
        brl = branch -a --no-merged
        bra = branch -r --list
        br-authors = !git for-each-ref --format='%(committerdate) %09 %(authorname) %09 %(refname)' | sort -k5n -k2M -k3n -k4n
        br-clean = !git branch --merged | grep -v "^\\*" | xargs -n1 git branch -d
        br-recent = for-each-ref --sort=-committerdate --format='%(committerdate) %(authorname) %(refname:short)' refs/heads/
        br-find = branch -r --contains
        stl = stash list
        std = stash show -u
        sdiff = diff --staged
        wdiff = diff --color-words
        conflicts = diff --name-only --diff-filter=U
        lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative
        log-grep = log --grep
        oid-find = !git rev-list --all --objects | grep
        # log all commits with differences
        log-diff = log -p
        # can optionally pass "--all" or a branch name to tree:
        #tree = log --graph --decorate --oneline
        tree = !git lg --graph
        counts = !git log --pretty=format: --name-only | sort | uniq -c | sort -g
        unstage = reset HEAD
        last = log -1 HEAD
        visual = !gitk
        st = status
        uncommit = reset --soft HEAD^
        progress = diff --stat
        pg = diff --shortstat
        tagrev = rev-list -n 1
[push]
        default = current
# [filter "lfs"]
#         clean = git-lfs clean %f
#         smudge = git-lfs smudge %f
#         required = true
[include]
        path = ~/.gitconfig_apps
