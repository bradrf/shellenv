shell /bin/bash
shelltitle sh
startup_message off
escape ^Oo
defscrollback 100000
ignorecase on

# Set the caption on the bottom line
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= $USER@%H %d %D %c"

# the following will toss anything in scrollback
# clear ; scrollback 0 ; scrollback 10000

#logfile $HOME/.screen_logs/%t.%n
#logtstamp on
#logtstamp after 600
#deflog on

defutf8 on

source "${HOME}/.screenrc_${SHORT_HOSTNAME}"

# setting env vars can be done like this:
# screen -t foo bash -ic 'FOO=bar bash'

chdir "${HOME}/work"
screen -t http

chdir "${HOME}"
screen

select 0
