#!/usr/bin/env python

import sys
import boto
import simple_aws

sys.argv.pop(0)
if len(sys.argv) < 1:
    print 'usage: elbls <region> [<region> ...]'
    exit(1)

for region in sys.argv:
    conn = boto.ec2.elb.connect_to_region(region)
    for elb in conn.get_all_load_balancers():
        print simple_aws.Elb(elb)
