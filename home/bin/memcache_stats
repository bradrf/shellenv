#!/bin/bash

if [ $# -lt 1 ]; then
    cat <<EOF >&2

usage: $(basename "$0" .sh) <loop_seconds> <interesting_stats_egrep_expression> [<statsd_host> <statsd_port>]

EOF
    exit 1
fi

loop_seconds="$1"
egrep_exp="$2"
statsd_host="$3"
statsd_port="$4"

if [ -n "$statsd_host" ]; then
    function sender() { nc -uw0 "$statsd_host" "$statsd_port"; }
else
    function sender() { cat; }
fi

set -e

prefix="${HOSTNAME:-$(hostname -s)}"
prefix="${prefix//./_}"

while true; do
    echo stats | nc -n 127.0.0.1 11211 | \
        tr -d '\r' | \
        grep -E '^STAT ('"$egrep_exp"')' | \
        awk '{print "'"$prefix"'.memcache." $2 ":" $3 "|g"}' | \
        sender
    sleep "$loop_seconds"
done
